<div class="inner-container">
    <form action="/" method="post">
        <p class="title">Code</p>
        <div class="content">
            <div class="inner-content">
                <p class="uid">{{uid}}</p>
            </div>
        </div>
    </form>
    <img class="display-image" src="/img/tracking.jpeg" alt='logo' />
</div>
<div class="side-container">
    <div class="inner-container">
        <form action="/api/signin" method="post">
            <p class="title">Welcome back</p>
            <div class="content">
                <div class="inner-content">
                    <input name="email" class="email" type="email" placeholder="Enter email...">
                    <input name="code" class="email" type="text" placeholder="Enter code...">
                </div>
            </div>
            <button class='login' type="submit">Sign in</button>
        </form>
    </div>
</div>